<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classify_football"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.interviewassistant.Views.ClassifyFootball">
    <TextView
        android:text="De uma maneira geral, como você avalia desempenho do Brasil na Copa deste ano?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">
        <RadioButton android:id="@+id/radio_cfs_otm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ótimo"
            android:onClick="onRadioOtmClicked"/>
        <RadioButton android:id="@+id/radio_cfs_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bom"
            android:onClick="onRadioBomClicked"/>
        <RadioButton android:id="@+id/radio_cfs_exames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular"
            android:onClick="onRadioRegClicked"/>
        <RadioButton android:id="@+id/radio_cfs_vacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruim"
            android:onClick="onRadioRuimClicked"/>
        <RadioButton android:id="@+id/radio_cfs_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Péssimo"
            android:onClick="onRadioPessimoClicked"/>
    </RadioGroup>

</RelativeLayout>
